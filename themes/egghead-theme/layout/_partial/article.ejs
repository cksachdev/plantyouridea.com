<div class="h-full text-white bg-gray-800 content-post">
    
    
    <div class="h-full px-8 py-8 bg-gray-900 bg-opacity-25 border-b border-teal-400 shadow-md content-header">
        <!-- Title -->
        <h2 class="font-serif text-4xl font-bold content-post-title ">
            <a  href="<%- config.root %><%- item.path %>">
                <%- item.title || item.link%>
            </a>
        </h2>
    </div>
    
    <!-- Content -->
    <div class="flex justify-around pb-8 text-white">
        <div class="flex font-medium text-white item-content "  >

            <div class="items-center justify-center w-full font-serif text-xl">
                 <h3 class="justify-center w-2/4 pb-6 mt-16 font-serif text-xl font-bold text-center page-header"><%- item.item1 %></h3>
                 <%- item.content %>
            </div>


           
          <% if (item.item2) { %> 
           <div class="flex flex-wrap justify-end max-w-xs mt-16 ml-20 font-semibold">
              <% if(item.item1 || item.item2) { %> 
                 <p class="w-32 h-24 p-4 m-2 text-center text-white bg-gray-700"><%- item.item2 %></p>
                 <p class="w-32 h-24 p-4 m-2 text-center text-white bg-gray-700"><%- item.item3 %></p>
                 <p class="w-32 h-24 p-4 m-2 text-center text-white bg-gray-700"><%- item.item4 %></p>
                 <p class="w-32 h-24 p-4 m-2 text-center text-white bg-gray-700"><%- item.item5 %></p>
                 <p class="w-32 h-24 p-4 m-2 mr-20 text-center text-white bg-gray-700"><%- item.item6 %></p>
              <% } %> 
            </div> 
          <% } %> 
        </div>
    </div>
    <!-- Tags and Categories links -->
    <%#- partial('article-tags', {item: item}) %>
    <%#- partial('article-categories', {item: item}) %>
    <section class="comments" id="comments">
        <div id="disqus_thread"></div>
        <script>
        var disqus_shortname = 'chetansachdev';
        lazyScripts.push('//' + disqus_shortname + '.disqus.com/embed.js')
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </section>
    <div class="justify-center footer-container">
        <%- partial('_partial/footer') %> 
        <%- partial('_partial/after-footer') %> 
    </div>
   
</div>