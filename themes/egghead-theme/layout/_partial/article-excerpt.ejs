 <div class="justify-center w-full pl-3 post sm:max-w-xs sm:w-1/2 md:max-w-md lg:max-w-lg lg:w-1/3 xl:max-w-xl xl:w-1/3" id="post" class="post-stub" onclick="location.href='<%- config.root %><%- item.path %>'; ">
   
    <!-- Title -->
 
     <div id="post" class="post-stub " onclick="location.href='<%- config.root %><%- item.path %>';">
       <p class="p-4">
           <% if(item.top === 'CSS') { %> 
              <div class="flex justify-center w-full p-4">
                <img class="border-2 border-teal-600 rounded-full" src="/img/tailwind.png" alt="" width="180" height="120">
              </div> 
            <% } %> 

            <% if(item.top === 'hexo') { %> 
            <div class="flex justify-center p-4">
              <img class="" src="/img/hexo.png" alt="" width="180" height="120">
            </div> 
            <% } %> 

           <% if(item.top === 'adapt') { %> 
            <div class="flex justify-center p-4">
              <img class="rounded-full " src="/img/adapt.jpg" alt="" width="180" height="100">
            </div> 
            <% } %> 

           
       </p>
       <p class="mt-2 mb-8 text-sm font-light text-gray-700">
         <%- item.text %>
       </p>
       <h2 class="post-title ">
            <a href="<%- config.root %><%- item.path %>" class="font-sans post-title-h2">
                <%- item.title %>
                
            </a>
        </h2>
         
          <!-- tag -->
        <div class="flex justify-center w-auto ">
          <div class="flex justify-center mb-8 tags">                 
            <a href="" class="button-js">
              <%- item.author %>
          </div>
        </div>  
        
        <div class="flex items-center justify-between mx-6 instructor">
           <div class="justify-center py-4">
             <div class="flex ">
               <img class="object-cover w-12 h-12 rounded-full" src="/img/Ankita.jpeg" alt="">
               <div class="items-end mt-2 font-normal text-gray-600 ">
                   <h3 class="text-md">Ankita Yadav</h3>
                   <div class="flex ml-3 text-xs text-center">
                      <p class="mr-1 ">20 lessons </p>
                      <p class="">. 2 hour</p>
                   </div>
                  </div>
             </div>
            </div>
            <div>
            <i class="text-gray-400 fa fa-lock fa-lg" aria-hidden="true"></i>
            </div>
        </div>
        
    </div> 
    
    
    
</div> 
